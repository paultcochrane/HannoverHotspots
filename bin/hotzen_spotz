#!/usr/bin/env python
# -*- coding: utf-8 -*-

from cmd import Cmd
import sys

class HPCommand(Cmd):
    def __init__(self):
        Cmd.__init__(self)

        self.intro = """\
Welcome to the Hannover Hotspot editor, version 0.1
Use Ctrl+D to exit, type 'help' or '?' for help.
"""

    def do_exit(self, param):
        """
        Exit the program.
        """
        sys.exit(0)

    def do_add(self, param):
        """
        Add a cafe/bar to the list of hotspots
        """
        print "Please enter cafe/bar's name:"

command = HPCommand()
command.prompt = "spotz_editor> "
command.cmdloop()

