#!/usr/bin/env python
# -*- coding: utf-8 -*-

from cmd import Cmd
import sys

class HPCommand(Cmd):
    def __init__(self):
        Cmd.__init__(self)

        self.intro = """\
Welcome to the Hannover Hotspot editor, version 0.1
Use Ctrl+D to exit, type 'help' or '?' for help.
"""

    def do_exit(self, param):
        """
        Exit the program.
        """
        sys.exit(0)

    def do_add(self, param):
        """
        Add a cafe/bar to the list of hotspots
        """
        location_name = raw_input("Please enter location's name: ")
        location_type_prompt = \
                "Please enter location's type (cafe, bar, restaurant): "
        location_type = raw_input(location_type_prompt)
        location_ssid = raw_input("Please enter location's SSID: ")
        is_wlan_free = raw_input("Is WLAN free here? (yes/no): ")
        street_address = \
                raw_input("Please enter the location's street address: ")
        location_url = raw_input("Please enter the location's URL: ")
        location_latitude = \
                raw_input("Please enter the location's latitude (in degrees): ")
        location_longitude = \
                raw_input("Please enter the location's longitude (in degrees): ")
        power_points_notes = \
                raw_input("Please enter notes about location's power points: ")
        network_speed_notes = \
                raw_input("Please enter notes about location's network speed: ")
        extra_notes = \
                raw_input("Please enter extra notes about the location: ")

command = HPCommand()
command.prompt = "spotz_editor> "
command.cmdloop()

# vim: expandtab shiftwidth=4 softtabstop=4
